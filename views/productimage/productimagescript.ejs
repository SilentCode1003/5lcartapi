<script>
  $(document).ready(function () {
    let productcode = "";
    let status = "";
    let base64String = "";

    LoadTable();
    LoadList();

    $("#productimage-dataTable tbody").on("click", "tr", function () {
      var dataRow = [];
      $(this)
        .closest("tr")
        .find("td")
        .each(function () {
          dataRow.push($(this).text());
        });
      console.log(dataRow);
      productcode = dataRow[0];
      status = dataRow[4];
    });

    $(document).on("click", "#editBtn", function () {
      $("#productcodemodal").val(productcode);
      $("#productModal").modal("show");
      console.log(productcode);
    });

    $(document).on("click", "#addBtn", function () {
      let productcode = $("#productlist").val();
      let productimage = base64String;

      var message = "";

      if (productcode == "") {
        message += "Produce Name ";
      }

      if (productimage == "") {
        message += "Image ";
      }

      if (message != "") {
        warning("Required", `Please fill up ${message}`);
      } else {
        $.ajax({
          type: "POST",
          url: "/productimage/save",
          data: {
            productcode: productcode,
            productimage: productimage,
          },
          success: function (result) {
            if (result.msg == "success") {
              LoadTable();
              success("Saved", "Successfully");
            }

            if (result.msg == "exist") {
              warning("Exist", `${productcode} has already registered image!`);
            }
          },
          error: function (err) {
            errormsg(err);
          },
        });
      }
    });

    //Edit Update
    $(document).on("click", "#saveBtn", function () {
      let productnamemodal = $("#productnamemodal").val();

      var message = "";

      if (productnamemodal == "") {
        message += "product Name ";
      }

      if (message != "") {
        warning("Required", `Please fill up ${message}`);
      } else {
        $.ajax({
          type: "POST",
          url: "/product/edit",
          data: {
            productnamemodal: productnamemodal,
            productcode: productcode,
          },
          success: function (result) {
            if (result.msg == "success") {
              LoadTable();
              success("Saved", "Successfully");
            }

            if (result.msg == "exist") {
              warning("Exist", `${productnamemodal} already exist!`);
            }
          },
          error: function (err) {
            errormsg(err);
          },
        });
      }
    });

    //Status Update
    $(document).on("click", "#activeBtn", function () {
      console.log(productcode);
      console.log(status);
      $.ajax({
        type: "POST",
        url: "/product/status",
        data: {
          status: status,
          productcode: productcode,
        },
        success: function (result) {
          if (result.msg == "success") {
            LoadTable();
            success("Saved", "Successfully");
          }

          if (result.msg == "notexist") {
            warning(`${productcode} does not exist!`);
          }
        },
        error: function (err) {
          errormsg(err);
        },
      });
    });

    $(document).on("click", "#inactiveBtn", function () {
      console.log(productcode);
      console.log(status);
      $.ajax({
        type: "POST",
        url: "/product/status",
        data: {
          status: status,
          productcode: productcode,
        },
        success: function (result) {
          if (result.msg == "success") {
            LoadTable();
            success("Saved", "Successfully");
          }

          if (result.msg == "notexist") {
            warning(`${productcode} does not exist!`);
          }
        },
        error: function (err) {
          errormsg(err);
        },
      });
    });

    $(document).on("change", "#imageInput", function () {
      const input = document.getElementById("imageInput");
      const file = input.files[0];

      const reader = new FileReader();
      reader.readAsDataURL(file);
      reader.onloadend = function () {
        const preview = document.getElementById("productimage");
        preview.src = reader.result;
      };
      imageUploaded();
    });

    function LoadTable() {
      $("#productimage-dataTable").DataTable({
        destroy: true,
        processing: true,
        serverSide: true,
        paging: false,
        searching: false,
        info: false,
        scrollY: 400,
        scrollCollapse: true,
        serverMethod: "GET",
        ajax: {
          url: "/productimage/load",
          dataSrc: (json) => {
            var finalData = [];
            var data = json.data;

            console.log(data);
            $.each(data, (key, item) => {
              var action = "";
              var status = item.status;

              if (status == "ACTIVE") {
                action =
                  '<button id="editBtn" class="btn btn-outline-primary" name="editBtn" data-toggle="modal" data-target="#productModal">EDIT</button> <button id="inactiveBtn" class="btn btn-outline-primary" name="inactiveBtn">INACTIVE</button>';
              }
              if (status == "INACTIVE") {
                action =
                  '<button id="editBtn" class="btn btn-outline-primary" name="editBtn" data-toggle="modal" data-target="#productModal">EDIT</button> <button id="activeBtn" class="btn btn-outline-primary" name="activeBtn">ACTIVE</button>';
              }

              finalData.push({
                imageid: item.imageid,
                productid: item.productid,
                image: `<img src="data:image/png;base64,${item.image}" alt="#" />`,
                status: item.status,
                createdby: item.createdby,
                createddate: item.createddate,
                action: action,
              });
            });

            return finalData;
          },
        },
        columnDefs: [
          {
            targets: 1,
            className: "td-indent",
          },
        ],
        columns: [
          { data: "imageid" },
          { data: "productid" },
          { data: "image" },
          { data: "status" },
          { data: "createdby" },
          { data: "createddate" },
          { data: "action" },
        ],
        initComplete: function () {},
      });
    }

    function LoadList() {
      $.ajax({
        type: "GET",
        url: "/product/load",
        success: function (result) {
          var data = result.data;

          $.each(data, function (key, item) {
            if (item.status == "ACTIVE") {
              var options = new Option(item.productcode, item.productcode);
              $(options).html(item.productname);
              $("#productlist").append(options);
            }
          });
        },
        error: function (err) {
          errormsg(err);
        },
      });
    }

    function imageUploaded() {
      const input = document.getElementById("imageInput");
      const file = input.files[0];

      var reader = new FileReader();
      console.log("next");

      reader.onload = function () {
        base64String = reader.result.replace("data:", "").replace(/^.+,/, "");
        // alert(imageBase64Stringsep);
        console.log(base64String);
      };
      reader.readAsDataURL(file);
    }
  });
</script>
